<% include ../partials/header %>
    <% if(currentUser && currentUser.isAdmin) { %>
    <h1>You're an admin!</h1>
<% } %>
        <header class="jumbotron">
            <div class="container">
                    <h1>Welcome To Swappr!</h1>
                    <p>View Our hand-picked books from all over the world</p>
                    <p>
                    <a class="btn btn-primary btn-lg" href='/books/new'>Add New Book</a>    
                    </p>
            </div>
        </header>
        
        <div class="row text-center" style= "display:flex; flex-wrap: wrap;">
          <% books.forEach(function(book){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= book.image %>">
                    <div class="caption">
                        <h4><%=book.name %></h4>
                    </div>
                    <p>
                      <a href="/books/<%= book._id %>" class="btn btn-primary"> More Info</a>  
                        
                    </p>
                </div>
            </div>
        <% }); %>
      </div>
</div>        

<% include ../partials/footer %>

